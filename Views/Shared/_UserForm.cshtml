@using WeddingPlanner.Models
@model User

<div class="userform">
    <p>Register</p>
    <form asp-action="Create" asp-controller="Login">
        <div class="blocks">
            <label asp-for="Name"></label>
            <input asp-for="Name">
        </div>
        <div class="blocks">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="blocks">
            <label asp-for="Last_Name"></label>
            <input asp-for="Last_Name">
        </div>
        <div class="blocks">
            <span asp-validation-for="Last_Name"></span>
        </div>
        <div class="blocks">
            <label asp-for="Email"></label>
            <input asp-for="Email">
        </div>
        <div class="blocks">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="blocks">
            <label asp-for="Password"></label>
            <input asp-for="Password">
        </div>
        <div class="blocks">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="blocks">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword">
        </div>
        <div class="blocks">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="blocks">
            <button type="submit" class="btn1">Register</button>
        </div>
    </form>
</div>